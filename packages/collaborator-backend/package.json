  "dependencies": {
    "colors.ts": "^1.0.20",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "internal-ip": "^7.0.0",
    "ip": "^1.1.8",
    "morgan": "^1.10.0",
    "utils": "workspace:^1.0.0",
    "ws": "^8.13.0",
    "y-protocols": "^1.0.5",
    "y-websocket": "^1.5.0",
    "y-websocket-convert": "workspace:^1.0.0",
